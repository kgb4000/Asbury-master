<div class="blog-page container">
	<h1 class="page-title">Pastor's Blog</h1>
	<%= link_to 'Add a new post', new_article_path %>
	<% @articles.each do |article| %>
		<section class="article">
	  	<div><h1 class="article-title"><%= link_to article.title, article_path(article) %></h1></div>
	  	<div class="date-created"><%= article.created_at.strftime("%b %d, %Y") %></div>
	  </section>
	  <!--<div><%= link_to 'Show', article_path(article) %></div>-->
    <div><%= link_to 'Edit', edit_article_path(article) %></div>
	  <!--<div><%= article.post %></div> -->
	<% end %>
</div>